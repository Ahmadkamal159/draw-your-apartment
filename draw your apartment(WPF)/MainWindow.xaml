<Window x:Class="draw_your_apartment_WPF_.MainWindow"
        ResizeMode="CanMinimize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:draw_your_apartment_WPF_"
        mc:Ignorable="d"
        
        Title="Draw Your Apartment" Height="600" Width="800">
    
    <Grid Background="Gray" >
        <Canvas Background="White" Name="ElibreCanvas"  Height="450" MouseLeftButtonDown="ElibreCanvas_MouseLeftButtonDown"   MouseMove="ElibreCanvas_MouseMove" Margin="10,59,10,75"/>

        <RadioButton TextBlock.FontSize="20" Content="Draw Elements" Background="White" Height="35" Width="177" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="65,514,0,0" IsChecked="True" Checked="RadioButton_Checked_Draw" RenderTransformOrigin="0.517,0.43"/>
        <RadioButton TextBlock.FontSize="20" Content="Delete elements" Background="White" Height="35" VerticalAlignment="Top" Margin="559,514,65,0" Checked="RadioButton_Checked_Delete_Element" RenderTransformOrigin="0.48,1.373"/>

    </Grid>
</Window>
